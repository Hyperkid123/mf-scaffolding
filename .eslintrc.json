{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "settings": {
    "react": {
      "version": "16.6"
    }
  },
  "globals": {
    "beforeAll": true,
    "describe": true,
    "expect": true,
    "it": true,
    "arguments": true
  },
  "plugins": ["prettier"],
  "extends": ["react-app", "eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended", "prettier/react"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  }
}